USAGE='
# errtrap.func -- error trap function for use in shell scripts\n
\n
example:\n
trapString='errtrap <scriptname> $LINENO $?'
trap "$trapString" ERR
'

function errtrap {
	print "$1: ERROR line $2: Command exited with status $3."
}
